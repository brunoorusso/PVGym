@model PVGym.Models.Plan

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Workouts</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var workout in Model.Workouts)
                {
                    <li>@workout.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PlanId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
